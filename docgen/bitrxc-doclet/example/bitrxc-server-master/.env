# Container name for containers
# Server
SERVER_CONTAINER_NAME="server"
# MariaDB
MARIADB_CONTAINER_NAME="mariadb"
# Redis
REDIS_CONTAINER_NAME="redis"
# Port maintained or published by containers
# Server
SERVER_TARGET_PORT="8080"
SERVER_PUBLISHED_PORT="7200"
# Mountpoints for containers
# Server
SERVER_STATIC_MOUNTPOINT="/home/www-data/static"
# MariaDB
MARIADB_DATA_MOUNTPOINT="../../server/mariadb/data"
MARIADB_CONF_MOUNTPOINT="../../server/mariadb/conf"
# Redis
REDIS_DATA_MOUNTPOINT="../../server/redis/data"
REDIS_CONF_MOUNTPOINT="../../server/redis/conf"
# Options for JRE
JAVA_OPTS="-Djava.security.egd=file:/dev/urandom -Duser.timezone=Asia/Shanghai"